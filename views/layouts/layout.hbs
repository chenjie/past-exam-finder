<!DOCTYPE html>
<html>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/css/layout.css">
        {{#each css}}
            <link rel="stylesheet" type="text/css" href="/css/{{this}}" />
        {{/each}}

        <title>{{title}}</title>
    </head>
    <body>
        {{#if need_nav_search}}
            <nav class="navbar bg-transparent navbar-expand-sm bg-light navbar-light">

                <a class="navbar-brand" href="/"><span class="text-dark ml-2 h5">Past Exam Finder</span></a>


                <form class="form-inline">
                    <input class="form-control mr-sm-2" id="searchBox" type="search" placeholder="Search" aria-label="Search">
                    <a href="#" class="btn btn-outline-success my-2 my-sm-0" id="searchButton" role="button">Search</a>
                </form>

                <span class="ml-2 text-secondary" id="navbarErrorMessage"></span>
                <!-- <a class="nav-link text-dark" href="uploadPage.html">Upload</a> -->

                <ul class="nav navbar-nav ml-auto" id="loginButton">
                    {{#if user}}
                        <li class="nav-item active">
                            <!------------------------------------------------------>
                            <a class="nav-link text-dark" href="/user/upload">Upload</a>
                            <!------------------------------------------------------>
                        </li>

                        <!------------------------------------------------------>
                        <a href="/user/profile/{{user}}" class="navbar-text" id="navBarUserName">Hello, {{{user}}}!</a>
                        <!------------------------------------------------------>
                        <li class="nav-item active">
                            <a class="nav-link" href="/logout"> <img class="ml-2" src="/icon/logout.png"alt="logout">
                                <span class="ml-1">Logout</span></a>
                        </li>
                    {{else}}
                        <li class="nav-item active">
                            <a class="nav-link" href="/register"> <img src="/icon/user.png"alt="user">
                                <span class="ml-1">Register</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/login"> <img src="/icon/login.png"alt="login">
                                <span class="ml-1">Login</span></a>
                        </li>
                    {{/if}}
                </ul>

            </nav>

        {{else}}

            <nav class="navbar bg-transparent navbar-expand-sm bg-light navbar-light">

                <a class="navbar-brand" href="/"><span class="text-dark ml-2 h5">Past Exam Finder</span></a>

                <ul class="nav navbar-nav ml-auto" id="loginButton">

                    {{#if user}}
                        <li class="nav-item active">
                            <!------------------------------------------------------>
                            <a class="nav-link text-dark" href="/user/upload">Upload</a>
                            <!------------------------------------------------------>
                        </li>

                        <!------------------------------------------------------>
                        <a href="/user/profile/{{user}}" class="navbar-text" id="navBarUserName">Hello, {{{user}}}!</a>
                        <!------------------------------------------------------>
                        <li class="nav-item active">
                            <a class="nav-link" href="/logout"> <img class="ml-2" src="/icon/logout.png"alt="logout">
                                <span class="ml-1">Logout</span></a>
                        </li>
                    {{else}}
                        <li class="nav-item active">
                            <a class="nav-link" href="/register"> <img src="/icon/user.png"alt="user">
                                <span class="ml-1">Register</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/login"> <img src="/icon/login.png"alt="login">
                                <span class="ml-1">Login</span></a>
                        </li>
                    {{/if}}

                </ul>
            </nav>

        {{/if}}

        {{{body}}}

        <!-- Optional JavaScript -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.1.1.min.js"> </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/js/layout.js"></script>
        {{#each js}}
            <script type="text/javascript" src="/js/{{this}}"></script>
        {{/each}}
    </body>
</html>