<div class="container">
    <div class="login-register-form">
        <div class="main-div">
            <div class="panel">
                <h2>Register</h2>
                <p>Please enter email and password</p>
            </div>
            {{#if errors}}
                {{#each errors}}
                    <div class="alert alert-danger">{{msg}}</div>
                {{/each}}
            {{/if}}
            <form id="registerForm" method="post" action="/register" onsubmit="return validate()">
                <div class="form-group">
                    <input type="text" class="form-control" id="newUsername" placeholder="Email Address" name="username">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="newPassword" placeholder="Password" name="password">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="password-comfirm" placeholder="Confirm Password" name="password2">
                </div>
                <div id="ver-code-div" class="form-group input-group">
                    <input type="text" class="form-control" id="ver-code" placeholder="Verification Code" name="code">
                    <span class="input-group-btn">
                        <input id="send-button" class="btn btn-primary" type="button" value="Send" readonly="readonly">
                    </span>
                    <p id='message'></p>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>